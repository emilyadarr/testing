{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
    {{#each posts as |post|}}
    <div>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="btn-back">Edit post</a>
    </div>
    {{/each}}
</section>
{{/if}}

<a class="btn-back" href="/dashboard/create">Create a New Post</a>
